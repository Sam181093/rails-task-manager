<h1>My Tasks</h1>
<ul>
<% @tasks.each do |task| %>
<li>
<%= link_to task["title"], task_path(task[:id]) %>
<%= link_to "Delete", tasks_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sur to delete #{task["title"]}?"} %>
</li>
<% end %>
</ul>

<%= link_to "Add new task", tasks_new_path  %>
